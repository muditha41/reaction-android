<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".MainActivity">

<com.google.android.material.appbar.AppBarLayout
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="181dp">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:paddingLeft="250dp"
         android:layout_gravity="right"
        android:outlineAmbientShadowColor="@color/fontBlack"
        android:theme="@style/Base.ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/MenuStyle">


        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottie_loading"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.066"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_colorFilter="#7D7D7D"
            android:cropToPadding="true"
            app:lottie_rawRes="@raw/bellanimation" />

        <ImageButton
            android:visibility="gone"
            android:id="@+id/notification"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="15dp"
            android:layout_width="25dp"
            android:layout_height="28dp"
            android:background="@drawable/bell_icon"
            />

   <de.hdodenhof.circleimageview.CircleImageView
       android:clickable="true"
       android:layout_width="45dp"
       android:layout_height="45dp"
       android:id="@+id/profile_image"/>

    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/tab_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="My contacts"
        android:gravity="center"
        android:textSize="25sp"
        android:textStyle="bold"
        android:fontFamily="@font/bold"
        android:textColor="@color/fontBlack"/>


    <Button
        android:id="@+id/btn_addFriends"
        android:layout_width="35dp"
        android:layout_height="50dp"
        android:background="@drawable/user_plus_icon"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="18dp"
        android:layout_gravity="right"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_layout"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        app:tabSelectedTextColor="@color/white"
       app:tabIndicatorColor="@color/white"
        app:tabTextColor="@color/fontBlack"
        app:tabGravity="center" >


    </com.google.android.material.tabs.TabLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/username"
        android:text="ftghfhfhf"
        android:textSize="20sp"
        android:textStyle="bold"
        android:visibility="invisible"
        />

</com.google.android.material.appbar.AppBarLayout>



    <androidx.viewpager.widget.ViewPager
        android:id="@+id/view_pager"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>