<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
   android:orientation="vertical" >

    <LinearLayout
        android:visibility="visible"
        android:id="@+id/layout_fill_form"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_width="350dp"
        android:layout_height="400dp"
        android:background="@drawable/dialog_background">

        <ImageView
            android:visibility="gone"
            android:id="@+id/close_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:layout_gravity="left"
            app:srcCompat="@drawable/ic_close"
            android:onClick="closeDialogbox"/>

        <EditText
            android:layout_marginTop="100dp"
            android:layout_marginBottom="20dp"
            android:id="@+id/frnd_email"
            android:layout_width="276dp"
            android:layout_height="52dp"
            android:background="@drawable/white_input_field"
            android:hint="Enter Email"
            android:imeOptions="actionDone"
            android:inputType="textEmailAddress"
            android:selectAllOnFocus="true"
            android:textColorHint="@color/fontLightGray" />

        <TextView
            android:layout_marginLeft="40dp"
            android:id="@+id/msg_txt"
            android:layout_width="237dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="55dp"
            android:layout_marginBottom="50dp"
            android:gravity="center"
            android:textSize="16sp"
            android:text="Send my friend a request."
            android:textAlignment="viewStart"
            tools:ignore="RtlCompat" />

        <Button
            android:id="@+id/btn_request_send"
            android:layout_width="190dp"
            android:layout_height="50dp"
            android:background="@drawable/button"
            android:text="Invite to my list"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textSize="18dp" />


    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/layout_success"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_width="350dp"
        android:layout_height="376dp"
        android:background="@drawable/dialog_background2">

        <ImageView
            android:layout_marginTop="150dp"
            android:layout_marginBottom="15dp"
            android:id="@+id/img_sample"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/right_icon" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textSize="16sp"
            android:gravity="center"
            android:text="Sent" />



    </LinearLayout>

</LinearLayout>